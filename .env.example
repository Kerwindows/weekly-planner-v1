# ================================
# WEEKLY PLANNER - ENVIRONMENT CONFIGURATION EXAMPLE
# Copy this file to .env and update with your actual values
# ================================

# Application Environment
APP_ENV=development
APP_DEBUG=true
APP_NAME="Weekly Planner"
APP_VERSION=1.0.0

# ================================
# DATABASE CONFIGURATION
# ================================
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=weekly_planner
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# ================================
# API CONFIGURATION
# ================================
API_URL_DEV=http://localhost/weekly-planner/api
API_URL_STAGING=https://staging.yourdomain.com/api
API_URL_PROD=https://weekly-planner.kerwindows.com/api

# ================================
# AUTHENTICATION & SECURITY
# ================================
JWT_SECRET=generate-a-strong-random-key-here
JWT_EXPIRATION=24h
PASSWORD_HASH_COST=12

# ================================
# EMAIL CONFIGURATION
# ================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_ADDRESS=noreply@yourdomain.com

# ================================
# LOGGING & MONITORING
# ================================
LOG_LEVEL=debug
ERROR_REPORTING=true

# ================================
# FEATURE FLAGS
# ================================
FEATURE_DRAG_DROP=true
FEATURE_ANALYTICS=true
FEATURE_DARK_MODE=true

# ================================
# TIMEZONE & LOCALIZATION
# ================================
DEFAULT_TIMEZONE=America/New_York
DEFAULT_LOCALE=en